<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="guide.Views.LoadingView">
    <Grid Background="#ddd4bc">
        <StackPanel Name="LoadProgress" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="True">
                <TextBlock Text="Загрузка..."/>
                <ProgressBar IsIndeterminate="True" Height="20" Foreground="Orange"/> 
            </StackPanel>
    </Grid>
    
</UserControl>
